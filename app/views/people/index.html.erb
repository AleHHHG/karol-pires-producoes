<h2 class="mt-5 mb-5">
  Colaboradores
  <%= link_icon(new_person_path, 'btn btn-primary float-end ms-1', 'fa-solid fa-plus', 'Novo Colaborador' ) %>
  <%= link_icon(new_person_path, 'btn btn-success float-end', 'fa-solid fa-upload', 'Importar Arquivo' ) %> 
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Telefone</th>
      <th>Projeto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.phone_number %></td>
        <td><%= person.project.name %></td>
        <td>
          <div class="btn-group" role="group">
            <button type="button" class="btn dropdown-toggle btn-md" data-bs-toggle="dropdown" aria-expanded="false">
              Opções
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Editar', edit_person_path(person), class: 'dropdown-item' %></li>
            </ul>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
