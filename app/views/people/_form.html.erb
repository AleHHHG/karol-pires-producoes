<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div class="alert alert-danger">
      <h4>O colaborador não pode ser salvo:</h4>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <%= form.label :project, 'Projeto', class: 'form-label' %>
        <%= select :person, :project_id, Project.all.collect { |p| [ p.name, p.id ] }, { prompt: 'Selecione o projeto' }, { class: 'form-select' }  %>
    </div>

    <div class="col">
      <%= form.label :name, 'Nome', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control'%>
    </div>

    <div class="col">
      <%= form.label :email, 'E-mail', class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control'%>
    </div>
  </div>
  <br clear="all" />
  <div class="row">
    <div class="col">
      <%= form.label :phone_number, 'Telefone', class: 'form-label' %>
      <%= form.telephone_field :phone_number, class: 'form-control'  %>
    </div>
    <div class="col">
      <%= form.label :rg, 'RG', class: 'form-label' %>
      <%= form.text_field :rg, class: 'form-control'  %>
    </div>
    <div class="col">
      <%= form.label :cpf, 'CPF', class: 'form-label' %>
      <%= form.telephone_field :cpf, class: 'form-control'  %>
    </div>
  </div>
  <br clear="all" />
  <div class="row">
    <div class="col">
      <%= form.label :role, 'Função', class: 'form-label' %>
      <%= form.text_field :role, class: 'form-control'  %>
    </div>
    <div class="col">
      <%= form.label :birth_of_date, 'Data de Nascimento', class: 'form-label' %>
      <%= form.date_field :birth_of_date, class: 'form-control'  %>
    </div>
  </div>


  <br clear="all" />

  <h5 class="card-title mb-2">Endereço</h5>
  <div class="row">
    <div class="col">
      <%= form.label :zip_code, 'CEP', class: 'form-label' %>
      <%= form.text_field :zip_code, class: 'form-control'%>
    </div>
    <div class="col">
      <%= form.label :city, 'Cidade', class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control '%>
    </div>
    <div class="col">
      <%= form.label :state, 'Estado', class: 'form-label' %>
      <%= form.text_field :state, class: 'form-control '%>
    </div>
  </div>
  <br clear="all" />

  <div class="row">
    <div class="col">
      <%= form.label :street, 'Logradouro', class: 'form-label' %>
      <%= form.text_field :street, class: 'form-control '%>
    </div>
    <div class="col">
      <%= form.label :neighborhood, 'Bairro', class: 'form-label' %>
      <%= form.text_field :neighborhood, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :complement, 'Complemento', class: 'form-label' %>
      <%= form.text_field :complement, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :number, 'Numero', class: 'form-label' %>
      <%= form.text_field :number, class: 'form-control' %>
    </div>
  </div>

  <%= form.submit 'Salvar', class: 'btn btn-lg btn-primary mt-3 float-end' %>
<% end %>
