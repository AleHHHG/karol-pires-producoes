<h2 class="mt-5 mb-5">
  Fornecedores
  <%= link_to 'Novo Fornecedor', new_supplier_path, class: 'btn btn-primary float-end' %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= link_to 'Editar', edit_supplier_path(supplier) %> | <%= link_to 'Deletar', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>