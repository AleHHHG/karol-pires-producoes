<h2 class="mt-5 mb-5">
  Projetos
  <%= link_icon(new_project_path, 'btn btn-primary float-end', 'fa-solid fa-plus', 'Novo Projeto' ) %>
</h2>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>CNPJ</th>
        <th>Telefone</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.email %></td>
          <td><%= project.document_number %></td>
          <td><%= project.phone %></td>
          <td>
            <div class="btn-group" role="group">
              <button type="button" class="btn dropdown-toggle btn-md" data-bs-toggle="dropdown" aria-expanded="false">
                Opções
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'Editar', edit_project_path(project), class: 'dropdown-item' %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= button_to 'Deletar', project, method: :delete, class: 'dropdown-item text-danger' %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br clear="all">
