<h2 class="mt-5 mb-5">
  Contratantes
  <%= link_icon(new_hire_path, 'btn btn-primary float-end', 'fa-solid fa-plus', 'Novo Contratante' ) %>
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hires.each do |hire| %>
      <tr>
        <td><%= hire.name %></td>
        <td><%= hire.email %></td>
        <td><%= hire.phone_number %></td>
        <td>
          <div class="btn-group" role="group">
            <button type="button" class="btn dropdown-toggle btn-md" data-bs-toggle="dropdown" aria-expanded="false">
              Opções
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Editar', edit_hire_path(hire), class: 'dropdown-item' %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= button_to 'Deletar', hire, method: :delete, class: 'dropdown-item text-danger' %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
