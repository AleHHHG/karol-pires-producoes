<h2 class="mt-5 mb-5">
  Solicitantes
  <%= link_to 'Novo solicitante', new_owner_path, class: 'btn btn-primary float-end' %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= link_to 'Editar', edit_owner_path(owner) %> | <%= link_to 'Deletar', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
