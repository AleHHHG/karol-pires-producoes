<h2 class="mt-5 mb-5">
  Solicitantes
  <%= link_icon(new_owner_path, 'btn btn-primary float-end', 'fa-solid fa-plus', 'Novo solicitante' ) %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td>
          <div class="btn-group" role="group">
            <button type="button" class="btn dropdown-toggle btn-md" data-bs-toggle="dropdown" aria-expanded="false">
              Opções
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Editar', edit_owner_path(owner), class: 'dropdown-item' %></li>
              <li><%= link_to 'Deletar', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
